# Server Configuration
PORT=3001

# MongoDB Configuration
MONGODB_URI=mongodb://username:password@host:port/database
MONGODB_DATABASE=threespeak
MONGODB_COLLECTION_VIDEOS=embed-video
MONGODB_COLLECTION_USERS=embed-users
MONGODB_COLLECTION_KEYS=embed-api-keys
MONGODB_COLLECTION_JOBS=embed-jobs

# Upload Configuration
UPLOAD_DIR=./uploads

# Base URL for embed links
BASE_URL=https://play.3speak.tv/embed

# Demo API Key (for public demo page)
DEMO_API_KEY=sk_demo_generate-a-secure-key-here

# Admin Password (for admin panel access)
ADMIN_PASSWORD=change-me-in-production

# IPFS Configuration
IPFS_API_ADDR=/ip4/127.0.0.1/tcp/5001
THREESPEAK_IPFS_ENDPOINT=http://supernode-ip:5002

# Encoder API Configuration
# Multi-encoder support: JSON array of encoder configs
# Format: [{"name":"encoder1","url":"https://encoder.example.com","apiKey":"key123","enabled":true}]
ENCODERS=[{"name":"snapie","url":"https://snapie.3speak.tv","apiKey":"your-encoder-api-key","enabled":true}]

# Webhook Configuration
WEBHOOK_API_KEY=generate-secure-key-with-openssl-rand-hex-32
WEBHOOK_URL=https://embed.3speak.tv/webhook

# Legacy single encoder support (fallback if ENCODERS is empty)
ENCODER_API_URL=https://snapie.3speak.tv
ENCODER_API_KEY=your-encoder-api-key
